# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Game {
  id: ID!
  name: String!
  release_date: String!
  publishers: [Company!]!
  developers: [Company!]!
  genres: [Genre!]!
}

type User {
  id: ID!
  name: String!
  friends: [User!]!
  games: [Game!]!
}

type Company {
  id: ID!
  name: String!
}

type Genre {
  id: ID!
  name: String!
}

type Query {
  games: [Game!]!
  users: [User!]!
}
